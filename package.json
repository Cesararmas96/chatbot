		"flowbite-svelte": "^0.45.1",
		"mdsvex": "^0.11.0",
		"postcss": "^8.4.38",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-typewriter": "^3.2.3",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
