{
	"name": "trocchatbot",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "NODE_OPTIONS=--max-old-space-size=4096 vite build",
		"build:dev": "NODE_OPTIONS=--max-old-space-size=4096 vite build --mode dev",
		"build:qa": "NODE_OPTIONS=--max-old-space-size=4096 vite build --mode qa",
		"build:staging": "NODE_OPTIONS=--max-old-space-size=4096 vite build --mode staging",
		"build:production": "NODE_OPTIONS=--max-old-space-size=4096 vite build --mode production",
		"preview": "vite preview --host --port 3000",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
